{
  "name": "Iranica Reader",
  "version": "0.4.0",
  "author": "Moos <mooster@42at.com>",
  "homepage_url": "https://github.com/moos/iranica-reader",
  "manifest_version": 2,
  "description": "Making Encyclop√¶dia Iranica articles easier to read online!",
  "icons": {
    "16": "icons/icon-16.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "*://*.iranicaonline.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.iranicaonline.org/articles/*"
      ],
      "css": [
        "lib/strip/css/strip.css",
        "src/inject/inject.css"
      ],
      "js": [
        "lib/latinize/latinize.js",
        "lib/jquery/jquery-3.4.1.min.js",
        "lib/strip/js/strip.pkgd.min.js",
        "src/inject/inject.js"
      ]
    }
  ],
  "background": {
     "scripts": [
       "js/background.js"
     ]
  },
  "web_accessible_resources": [
     "/lib/strip/css/strip-skins/*"
   ]
}
